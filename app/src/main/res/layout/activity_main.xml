<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@drawable/money5">

    <Button
        android:id="@+id/button"
        android:layout_width="261dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#006400"
        android:onClick="addTransaction"
        android:text="Добавить транзакцию"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toTopOf="@+id/main"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button30"
        android:layout_width="261dp"
        android:layout_height="99dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#006400"
        android:onClick="goal"
        android:text="Поставить цель"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="237dp"
        android:layout_height="92dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="220dp"
        android:backgroundTint="#006400"
        android:onClick="onClick"
        android:text="Посмотреть диаграмму по категориям"
        app:layout_constraintStart_toStartOf="@+id/main"

        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="216dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Приложение для управления финансами"
        android:textColor="#006400"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="29dp" />
</androidx.constraintlayout.widget.ConstraintLayout>